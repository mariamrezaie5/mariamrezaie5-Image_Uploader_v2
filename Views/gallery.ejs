<!DOCTYPE html>
<html>
<head><title>Gallery</title>
<link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Gallery</h1>
    <a href="/">Home</a>
    <div style="display: flex; flex-wrap: wrap;">
      <% images.forEach(image => { %>
        <div style="margin: 10px;">
          <img src="/uploads/<%= image.filename %>" style="max-width: 150px;"><br>
          <small><%= image.originalname %><br><%= new Date(image.uploadDate).toLocaleString() %></small>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
